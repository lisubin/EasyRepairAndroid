<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/center"
    android:layout_margin="@dimen/small">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="@dimen/center"
        android:layout_height="@dimen/center"
        android:layout_alignParentTop="true"
        android:src="@color/color_69" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/center"
        android:layout_toEndOf="@id/photo"
        android:layout_toRightOf="@id/photo"
        android:layout_marginLeft="@dimen/radius"
        android:layout_marginStart="@dimen/radius"
        android:orientation="vertical">


        <TextView
            android:id="@+id/idname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send"
            style="@style/te2"/>

        <TextView
            android:id="@+id/decri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small"
            android:text="@string/send"
            style="@style/te1"
            />

        <TextView
            android:id="@+id/fare"
            android:layout_marginTop="@dimen/radius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/radius"
            android:layout_marginStart="@dimen/radius"
            android:text="@string/send"
            android:textColor="@color/redColor"
            style="@style/te2"/>

    </LinearLayout>

    <Button
        android:id="@+id/xiadan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="@string/xia"
        android:textColor="@color/colorDark"
        android:background="@color/transparent"/>

</RelativeLayout>